@model Jogador
@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<form method='post' action="@Url.Action("Cadastrar")" enctype="multipart/form-data"> 
          
            <label for="">Nome</label>
            <input type="text" name = "Nome">
            <label for="">E-mail</label>
            <input type="text" name="Email">
            <label for="">Id-Equipe</label>
            <select name="IdEquipe" id="IdEquipe">
                <option value="0">
                    Selecione uma Equipe
                </option>
                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                    <option value="@equipe.IdEquipe">@equipe.Nome</option>
                }
            </select>
            <button type="submit">Cadastrar</button> </form>

<table class="table table-striped table-responsive" >
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Equipe</th>
        <th>Ações</th>
        <td></td>
    </thead>

    <tbody>
        @foreach (Jogador item in ViewBag.Jogador)
        {
        <tr>
            <td>@item.IdJogador</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td><img src="/img/Equipes/@item.Equipe.Imagem" alt="Imagem da equipe @item.Nome" width="50px"></td>
            <td>
                <a class="nav-link text-dark" asp-area="link para esxcluir Jogador" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@item.IdJogador">Excluir</a>
            </td>
            <td>
                <a class="nav-link text-dark" asp-area="link para editar Jogador" asp-controller="Jogador" asp-action="Editar" asp-route-id="@item.IdJogador">Editar</a>
            </td>
        </tr>    
        }

    </tbody>
</table>