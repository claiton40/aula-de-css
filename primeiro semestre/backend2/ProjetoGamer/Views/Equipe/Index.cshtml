@model Equipe
@{
    ViewData["Title"] = "Equipe";
}

<h1>Tela de Equipes</h1>

        <form method='post' action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
          
            <label for="">Nome</label>
            <input type="text" name = "Nome">
            <label for="">Imagem</label>
            <input type="file" name="Imagem">
            


            <button type="submit">Cadastrar</button>

        </form>

<table class="table table-striped table-responsive" >
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
        <td></td>
    </thead>

    <tbody>
        @foreach (Equipe item in ViewBag.Equipe)
        {
        <tr>
            <td>@item.IdEquipe</td>
            <td>@item.Nome</td>
            <td>
                <img src="/img/Equipes/@item.Imagem" alt="Imagem da equipe @item.Nome" width="50px">
            </td>
            <td>
                <a class="nav-link text-dark" asp-area="link para esxcluir equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.IdEquipe">Excluir</a>
            </td>
            <td>
                <a class="nav-link text-dark" asp-area="link para editar equipe" asp-controller="Equipe" asp-action="Editar" asp-route-id="@item.IdEquipe">Editar</a>
            </td>
        </tr>    
        }

    </tbody>
</table>